@inherits LayoutComponentBase

<div class="page d-flex flex-column flex-lg-row">
   
    <nav class="sidebar bg-dark text-white p-3">
        <h4 class="text-center py-2">RedadasMigracion</h4>
        <NavMenu />
    </nav>

   
    <main class="flex-grow-1 d-flex flex-column">
       
        <header class="top-row bg-light py-2 px-4 d-flex justify-content-end align-items-center shadow-sm">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="btn btn-link text-decoration-none">
                <i class="fas fa-info-circle"></i> About
